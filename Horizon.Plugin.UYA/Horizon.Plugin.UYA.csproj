    </Reference>
    <Reference Include="Server.Plugins.Interface">
      <HintPath>..\..\horizon-server\Server.Plugins.Interface\bin\Debug\net9.0\Server.Plugins.Interface.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy /S /y $(OutDir) &quot;$(SolutionDir)..\horizon-server\Server.Medius\bin\Debug\net9.0\Plugins\uya&quot;" />
  </Target>

</Project>
